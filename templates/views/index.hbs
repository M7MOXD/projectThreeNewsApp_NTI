<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
    <script src='js/fontAwesome.js'></script>
    <link rel='shortcut icon' href='img/favicon.png' type='image/x-icon' />
    <link rel='stylesheet' href='css/style.css' />
    <title>{{title}}</title>
  </head>
  <body>
    <div>
      <header>
        <nav class='navbar navbar-light bg-light'>
          <div class='container-fluid'>
            <button
              class='navbar-toggler d-lg-none'
              type='button'
              data-bs-toggle='offcanvas'
              data-bs-target='#offcanvasNavbar'
              aria-controls='offcanvasNavbar'
            >
              <span class='navbar-toggler-icon'></span>
            </button>
            <ul class='nav d-none d-lg-flex'>
              <li class='nav-item'>
                <a
                  class='nav-link active text-dark'
                  aria-current='page'
                  href='/'
                >Home</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link text-dark' href='#'>Breaking News</a>
              </li>

            </ul>
            <a class='navbar-brand m-0' href='/'><img
                src='img/favicon.png'
                alt='logo'
              /></a>
            <div class='d-flex align-items-center'>
              <i class='fal fa-search mx-3'></i>
              <i class='fal fa-user-circle mx-3'></i>
            </div>
            <div
              class='offcanvas offcanvas-start'
              tabindex='-1'
              id='offcanvasNavbar'
              aria-labelledby='offcanvasNavbarLabel'
            >
              <div class='offcanvas-header'>
                <h5 class='offcanvas-title' id='offcanvasNavbarLabel'>
                  CNN
                </h5>
                <button
                  type='button'
                  class='btn-close text-reset'
                  data-bs-dismiss='offcanvas'
                  aria-label='Close'
                ></button>
              </div>
              <div class='offcanvas-body'>
                <ul class='navbar-nav justify-content-end flex-grow-1 pe-3'>
                  <li class='nav-item'>
                    <a
                      class='nav-link active'
                      aria-current='page'
                      href='/'
                    >Home</a>
                  </li>
                  <li class='nav-item'>
                    <a class='nav-link' href='#'>Breaking News</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
        <div
          id='carouselExampleDark'
          class='carousel carousel-dark slide'
          data-bs-ride='carousel'
        >
          <div class='carousel-inner'>
            <div class='carousel-item active' data-bs-interval='1000'>
              <img src='img/favicon.png' class='mx-auto d-block' />
              <div class='carousel-caption d-none d-md-block'>
                <h5>Breaking News</h5>
                <p>Some representative placeholder content for the first slide.</p>
              </div>
            </div>
            {{#each response}}
              <div class='carousel-item' data-bs-interval='3000'>
                <img src={{this.urlToImage}} class='mx-auto w-75 d-block' />
                <div class='carousel-caption d-none d-md-block text-light'>
                  <h5>{{this.title}}</h5>
                  <p>{{this.description}}</p>
                </div>
              </div>
            {{/each}}
          </div>
          <button
            class='carousel-control-prev'
            type='button'
            data-bs-target='#carouselExampleDark'
            data-bs-slide='prev'
          >
            <span class='carousel-control-prev-icon' aria-hidden='true'></span>
            <span class='visually-hidden'>Previous</span>
          </button>
          <button
            class='carousel-control-next'
            type='button'
            data-bs-target='#carouselExampleDark'
            data-bs-slide='next'
          >
            <span class='carousel-control-next-icon' aria-hidden='true'></span>
            <span class='visually-hidden'>Next</span>
          </button>
        </div>
      </header>
      <main class='container my-3'>
        <div class='row row-cols-1 row-cols-md-3 g-4'>
          {{#each response}}
            <div class='col' id='newsCard'>
              <div class='card h-100'>
                <img src={{this.urlToImage}} class='card-img-top' alt='' />
                <div class='card-body'>
                  <h5 class='card-title'>{{this.title}}</h5>
                  <p class='card-text'>{{this.description}}</p>
                </div>
                <div class='card-footer'>
                  <small class='text-muted'>{{this.publishedAt}}</small>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </main>
      <footer class='border-top border-dark py-3'>
        <div
          class='container-fluid row border-bottom d-flex flex-column flex-md-row flex-wrap text-center py-3'
        >
          <div class='col'>
            <h5 class='border-bottom border-dark'>PRIVACY</h5>
            <ul class='list-unstyled'>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>Privacy
                  Policy
                </a>
              </li>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>Terms of
                  service
                </a>
              </li>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>Global News
                </a>
              </li>
            </ul>
          </div>
          <div class='col'>
            <h5 class='border-bottom border-dark'>ABOUT US</h5>
            <ul class='list-unstyled'>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>FAQ </a>
              </li>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>Search </a>
              </li>
              <li class='mb-1'>
                <a class='text-muted text-decoration-none' href='#'>Contact Us
                </a>
              </li>
            </ul>
          </div>
          <div class='col'>
            <h5 class='border-bottom border-dark'>CONNECT WITH US</h5>
            <form>
              <fieldset class='input-group form-floating'>
                <input
                  type='email'
                  id='mail'
                  class='form-control'
                  placeholder='Join our mailing list'
                />
                <label for='mail'>Join our mailing list</label>
                <button class='btn btn-outline-secondary' type='button'>
                  SEND
                </button>
              </fieldset>
            </form>
          </div>
        </div>
        <div class='py-3'>
          <div class='fs-4 text-center'>
            <a href='#' class='text-muted text-decoration-none m-2'>
              <i class='fa fa-facebook'></i>
            </a>
            <a href='#' class='text-muted text-decoration-none m-2'>
              <i class='fa fa-twitter'></i>
            </a>
            <a href='#' class='text-muted text-decoration-none m-2'>
              <i class='fa fa-instagram'></i>
            </a>
          </div>
          <p class='text-center'>
            &copy; 2021 CNN. All right reseved || Design by M7MOXD
          </p>
        </div>
      </footer>
    </div>
    <script src='js/app.js'></script>
  </body>
</html>